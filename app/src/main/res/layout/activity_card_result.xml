<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
             android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="5dp" />
        <TextView
            android:id="@+id/item_name"
            android:text="Devicion"
            android:textColor="#218C8D"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_picture"
            android:layout_alignEnd="@+id/item_phone" />
        <TextView
            android:id="@+id/item_address"
            android:text="69 Grand St, Brooklyn, NY 11249"
            android:textIsSelectable="true"
            android:clickable="true"
            android:textColor="#218C8D"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_phone"
            android:text="(718) 285-6180"
            android:textIsSelectable="true"
            android:clickable="true"
            android:textColor="#218C8D"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shareBt"
                android:padding="8dp"
                android:src="@drawable/share_icon"/>

            <!--<ImageButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/menubt"-->
                <!--android:padding="8dp"/>-->

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>