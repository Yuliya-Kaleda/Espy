<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_recycleH_margin"
                android:paddingRight="@dimen/activity_recycleH_margin"
                android:paddingTop="@dimen/activity_recycleV_margin"
                android:paddingBottom="@dimen/activity_recycleV_margin"
                android:orientation="vertical"
                android:background="#6CCECB"
                tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Venue"
        android:id="@+id/search_bar"/>

    <TextView
        android:text="Results"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/results_search"
        android:textColor="@android:color/black"
        android:layout_below="@id/search_bar"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_list_final"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/results_search">
    </ListView>

    <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/listView"/>

</RelativeLayout>
