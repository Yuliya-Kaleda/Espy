<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/PrimaryColor"
    android:paddingBottom="@dimen/activity_recycleV_margin"
    android:paddingLeft="@dimen/activity_recycleH_margin"
    android:paddingRight="@dimen/activity_recycleH_margin"
    android:paddingTop="@dimen/activity_recycleV_margin">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:id="@+id/favorite_text"
            fontPath="fonts/JosefinSans-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/favorite"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:ignore="MissingPrefix" />

    </com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>

</FrameLayout>