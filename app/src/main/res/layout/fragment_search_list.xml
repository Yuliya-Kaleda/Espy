<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/PrimaryColor"
    android:paddingBottom="@dimen/activity_recycleV_margin"
    android:paddingLeft="@dimen/activity_recycleH_margin"
    android:paddingRight="@dimen/activity_recycleH_margin"
    android:paddingTop="@dimen/activity_recycleV_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
    <!--<todo: add  margin btw search bar and title;-->

    <com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal|top">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/search_field_TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background">

            <EditText
                android:id="@+id/search_field_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions" />

            <!--<Button-->
            <!--android:layout_margin="10dp"-->
            <!--android:text="Menu"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/button_menu"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"/>-->
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/nearby_text"
            fontPath="fonts/JosefinSans-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_field_TextInput"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="Nearby"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:ignore="MissingPrefix" />

    </com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>
    â€‹
</FrameLayout>