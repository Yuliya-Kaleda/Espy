<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:theme="@style/CardList"
        card_view:cardCornerRadius="7dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/venue_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/devicion"
                    android:scaleType="centerCrop"
                    app:sriv_left_bottom_corner_radius="0dip"
                    app:sriv_left_top_corner_radius="7dip"
                    app:sriv_right_bottom_corner_radius="0dip"
                    app:sriv_right_top_corner_radius="7dip"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    fontPath="fonts/poiret_one.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:text="Devicion"
                    android:textColor="#218C8D"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:id="@+id/ratingBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_name"
                    android:isIndicator="true"
                    android:textColor="#218C8D"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    android:background="#000000"/>

                <TextView
                    android:id="@+id/item_address"
                    fontPath="fonts/poiret_one.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingBar1"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="69 Grand St, Brooklyn, NY 11249"
                    android:textColor="#218C8D"
                    android:textSize="14sp"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:id="@+id/item_phone"
                    fontPath="fonts/poiret_one.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_address"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:text="(718) 285-6180"
                    android:textColor="#218C8D"
                    android:textSize="14sp"
                    tools:ignore="MissingPrefix"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/faveBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="10dp"
                    android:src="@drawable/heart_icon"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/shareBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="10dp"
                    android:src="@drawable/share_icon"/>

                <TextView
                    android:id="@+id/menubt"
                    fontPath="fonts/poiret_one.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_margin="5dp"
                    android:src="@drawable/list_icon"
                    android:text="MENU"
                    android:textColor="#218C8D"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>