    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:theme="@style/CardList"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="false">
        ​

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            ​
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_weight="0.5">
                ​
                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/venue_picture"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/espy_icon"
                    android:scaleType="centerCrop"
                    app:sriv_left_bottom_corner_radius="0dip"
                    app:sriv_left_top_corner_radius="10dip"
                    app:sriv_right_bottom_corner_radius="0dip"
                    app:sriv_right_top_corner_radius="10dip"/>
                ​
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">



                <TextView
                    android:id="@+id/item_name"
                    fontPath="fonts/JosefinSans-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Devicion"
                    android:textColor="#218C8D"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    ​
                <ImageButton
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_marker"
                    android:id="@+id/distance_marker"
                    style="?android:attr/borderlessButtonStyle"/>
                <TextView
                    android:paddingTop="8dp"
                    android:id="@+id/item_distance"
                    fontPath="fonts/JosefinSans-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="distance"
                    android:textColor="#218C8D"
                    android:textSize="24sp"
                    tools:ignore="MissingPrefix"/>
                  </LinearLayout>
