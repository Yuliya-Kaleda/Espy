<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/PrimaryColor">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="false"
        app:theme="@style/CardList">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:layout_weight="0.5">

        <com.joooonho.SelectableRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/venue_picture"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/espy_icon"
            android:adjustViewBounds="true"
            app:sriv_left_top_corner_radius="10dip"
            app:sriv_right_top_corner_radius="10dip"
            app:sriv_left_bottom_corner_radius="0dip"
            app:sriv_right_bottom_corner_radius="0dip" />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_info"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                tools:ignore="MissingPrefix"
                android:id="@+id/item_name"
                android:textStyle="bold"
                android:text="Devicion"
                android:textColor="#218C8D"
                android:textSize="35sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="fonts/JosefinSans-Bold.ttf"/>


            <TextView
                tools:ignore="MissingPrefix"
                android:id="@+id/distance_text"
                android:text="250 ft"
                android:textSize="20sp"
                android:textColor="#218C8D"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="fonts/JosefinSans-Regular.ttf"/>

                <TextView
                    tools:ignore="MissingPrefix"
                    android:id="@+id/rating_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="9.5"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/rating_box"
                    fontPath="fonts/JosefinSans-Regular.ttf"/>

                <!--<RatingBar-->
                    <!--android:id="@+id/ratingBar1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/item_name"-->
                    <!--android:max="100"-->
                    <!--android:numStars="5"-->
                    <!--android:stepSize="0.1"-->
                    <!--android:layout_margin="5dp"-->
                    <!--style="?android:attr/ratingBarStyleSmall" />-->

            <TextView
                tools:ignore="MissingPrefix"
                android:id="@+id/item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="69 Grand St, Brooklyn, NY 11249"
                android:textColor="#218C8D"
                android:textSize="20sp"
                fontPath="fonts/JosefinSans-Regular.ttf"/>

                <TextView
                    tools:ignore="MissingPrefix"
                    android:id="@+id/item_phone"
                    android:text="(718) 285-6180"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="#218C8D"
                    android:textSize="20sp"
                    fontPath="fonts/JosefinSans-Regular.ttf"/>

            </LinearLayout>

        </LinearLayout>

         <android.support.design.widget.CoordinatorLayout
            android:id="@+id/layout_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/faveBt"
                android:layout_margin="10dp"
                app:layout_anchorGravity="top|left"
                android:src="@drawable/heart_icon"/>



            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/plus"
                app:layout_anchorGravity="top|left|end"
                android:src="@drawable/plus_icon"
                android:layout_weight="1" />

         </android.support.design.widget.CoordinatorLayout>


</android.support.v7.widget.CardView>

</LinearLayout>