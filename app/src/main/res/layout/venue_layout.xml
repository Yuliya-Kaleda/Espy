<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryColor">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:theme="@style/CardList"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_weight="0.5">


                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/venue_picture"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/espy_icon"
                    android:scaleType="centerCrop"
                    app:sriv_left_bottom_corner_radius="0dip"
                    app:sriv_left_top_corner_radius="10dip"
                    app:sriv_right_bottom_corner_radius="0dip"
                    app:sriv_right_top_corner_radius="10dip"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/item_name"
                    fontPath="fonts/JosefinSans-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Devicion"
                    android:textColor="#218C8D"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"/>


                <TextView
                    android:id="@+id/distance_text"
                    fontPath="fonts/JosefinSans-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="250 ft"
                    android:textColor="#218C8D"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix"/>


                <TextView
                    android:id="@+id/rating_box"
                    fontPath="fonts/JosefinSans-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/rating_box"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="9.5"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="MissingPrefix"/>


                <!--<RatingBar-->
                <!--android:id="@+id/ratingBar1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/item_name"-->
                <!--android:max="100"-->
                <!--android:numStars="5"-->
                <!--android:stepSize="0.1"-->
                <!--android:layout_margin="5dp"-->
                <!--style="?android:attr/ratingBarStyleSmall" />-->


                <TextView
                    android:id="@+id/item_address"
                    fontPath="fonts/JosefinSans-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="69 Grand St, Brooklyn, NY 11249"
                    android:textColor="#218C8D"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix"/>


                <TextView
                    android:id="@+id/item_phone"
                    fontPath="fonts/JosefinSans-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="(718) 285-6180"
                    android:textColor="#218C8D"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix"/>


            </LinearLayout>


        </LinearLayout>


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/layout_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/faveBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:src="@drawable/heart_icon"/>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right|end"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/plus_icon"/>


        </android.support.design.widget.CoordinatorLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>